{
    "manifest_version": 3,
    "name": "ココフォリア通知",
    "version": "0.2",
    "description": "ココフォリアの更新をバックグラウンドで通知します。",
    "permissions": [
        "offscreen",
        "notifications",
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://ccfolia.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://ccfolia.com/rooms/*"
            ],
            "js": [
                "content-script.js"
            ],
            "all_frames": true
        }
    ]
}